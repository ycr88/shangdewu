<header id="header">
      <div class="row banner">
        <figure class="logo navbar-brand navbar-brand_">
          <a href="{{ base_url_absolute }}">
            <img alt="Shang De Wu" src="{{ theme_url }}/img/logo_header.png">
          </a>
        </figure>
        <div class="social">
          <ul class="social_icons ">
               {% for item  in site.social %}
                 <li><a href="{{ item.url }}" target="_blank"><i class="{{item.icon}}"></i></a></li>
               {% endfor %}
          </ul>
        </div>
        <div class="adress">
          {{ site.adress}}
        </div>
      </div>
</header>
<div id="menuheader" class="menuheader">
  <nav class="navbar navbar-default" role="navigation">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu-items" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="menu-logo navbar-brand hide" href="#">
            <img alt="ShangDeWu" src="images/menu_logo.png">
          </a>
          <span class="navbar-text visible-xs-block hide">
            {{site.title}}
              <ul class="social_icons ">
                   {% for item  in site.social %}
                     <li><a href="{{ item.url }}" target="_blank"><i class="{{item.icon}}"></i></a></li>
                   {% endfor %}
              </ul>
            </span>
        </div>

        <div id="menu-items" class="menu-items collapse navbar-collapse" >
          {% include 'partials/navigation.html.twig' %}
        </div>
        </div>
  </nav>
</div>
