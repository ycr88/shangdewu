{% extends 'partials/base.html.twig' %}

{% set dateformat = admin.page.dateformat ?: config.system.pages.dateformat.short ?: "MM dd, Y" %}
{% set post_image_url = page.header.header_image ? page.media.images[page.header.header_image].cache.url() : page.find('/blog').media['default.jpg'].cache.url()  %}
{% set style = ' style="background-image: url(\'' ~ post_image_url  ~ '\')"' %}

{% block content %}
<header class="post intro-header"{{ style }}>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-heading">
                    <h1>{{ page.title }}</h1>
                    {% if page.header.subheading %}
                    <h2 class="subheading">{{ page.header.subheading }}</h2>
                    {% endif %}
                    <span class="meta">{{ 'BLOG.POST_BY'|t }} {{ page.header.author }} {{ 'BLOG.POST_ON'|t }} {{ page.date|date(dateformat) }}</span>
                </div>
            </div>
        </div>
    </div>
</header>
<article>
    <div class="container">
      <div class="row">
        <div class="col-sm-6">

          <img src=" {{ page.media.images[page.header.header_image].cache.url() }}" alt="">

        </div>
        <div class="col-sm-6">
          <img src="{{ page.find('/blog').media['default.jpg'].cache.url() }}" alt="">
          <h2>{{ page.find('blog').media['default.jpg'] }}</h2>
        </div>
      </div>
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                {{ page.content }}
                {% if config.plugins.jscomments.enabled %}
                    {{ jscomments() }}
                {% endif %}
            </div>
        </div>
    </div>
</article>
{% endblock %}
