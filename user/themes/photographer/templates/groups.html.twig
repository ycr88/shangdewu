{% extends 'partials/base.html.twig' %}
{% set collection = page.collection %}
{% block content %}
<div id="content" class="{{ page.header.class }} ">
  <div class="container">
    {% if collection is not empty %}
      {% include 'group/schedule.html.twig' %}
    {% endif %}   
    {% include 'group/feature.html.twig' %}       
      <section class="row">
          {{ page.header.description }}
           {{ page.content }}
       </section>
       <section id="group-list" class="items row">
         <h2>{{'GROUP.SLIDE_HEADING'|t}}</h2>      
         <div class="group-slide">
           {% for item in collection %}
            <div class="item {{item.header.class}} col-sm-12 col-md-4">
              <div class="content">
                <img src="{{item.media[item.header.header_image].url}}" alt="">
                <div class="title">
                  <a href="{{item.url}}"><h3>{{"GROUP.#{item.header.id}.NAME"|upper|t}}</h3></a>
                </div>
                <a href="{{item.url}}" class="read-more">{{'BLOG.READ_MORE'|t}}</a>
                </div>
            </div>
           {% endfor %}
         </div>
       </section>
       <section id="inscription">
        <div class="subsection inscription">
          <h3>Запись в группу</h3> 
          {% include "forms/form.html.twig" %}
          <p>Для того, чтобы записаться на курс позвоните или отправьте смс по номеру:
          <a href="tel:+375333627666"><span class="fa-li"><i class="fas fa-phone"></i></span>+375333627666 **(MTC)**<span class="phone-icon icon-viber fab fa-viber"></span></a>
          </p> 
          </div>
       </section>
         {% set price = page.find("/groups/price") %}
          {{price.content}}
       <section name="extra">
        {% set extra = page.find("/groups/extra") %}
        {{extra.content}}
       </section>
   </div>
 </div>
{% endblock %}
